<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/videoitem_vertical_margin"
    android:paddingStart="@dimen/videoitem_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/waiting"
            android:paddingEnd="@dimen/videoitem_horizontal_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:orientation="vertical">

            <TextView
                android:id="@+id/plName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/plDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x videos / 00:00 length"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/plDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HomeTown"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/plID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HomeTown"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>