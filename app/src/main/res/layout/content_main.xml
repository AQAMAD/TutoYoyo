<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frameBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/drawer_header" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Welcome to TutoYoyo"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal|top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="This app was designed to help you progress in your yoyo play and provide quick and easy access to your favorites tutorials.
                    The crew would like to thanks the producers of each and every tutorial on this app for their support.
                    You may start by opening the left menu and browsing your favorite sources of tutorials, when you find one you like, simply press the add button to add it to your tuts.
                    Once a few tuts are in your tuts, activate synchronisation to download the tuts for offline viewing.
                    Open a tut and user our advanced player options, like repeat, slowmo or punch in/punch out."
                    android:id="@+id/textView5"
                    android:layout_gravity="center" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
